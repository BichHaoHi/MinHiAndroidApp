<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Home"
    android:background="@color/background"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_main">


        <ImageView
            android:id="@+id/imgAvt"
            android:layout_width="91dp"
            android:layout_height="90dp"
            android:background="@color/background"
            android:src="@drawable/avt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.024"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/func_nhapHang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="128dp"
            android:foreground="@drawable/ic_nhap"
            android:src="@drawable/shape_function"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/nameAcount"
            android:layout_width="162dp"
            android:layout_height="45dp"
            android:fontFamily="@font/roboto_main"
            android:text="Bich Hao"
            android:textColor="#ffffff"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintStart_toEndOf="@+id/imgAvt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/func_xuathang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="152dp"
            android:layout_marginTop="128dp"
            android:foreground="@drawable/ic_xuat"
            android:src="@drawable/shape_function"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/func_ls"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="288dp"
            android:layout_marginTop="128dp"
            android:foreground="@drawable/ic_ls"
            android:src="@drawable/shape_function"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_xh"
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:text="Xuất hàng"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/text_nh"
            app:layout_constraintTop_toBottomOf="@+id/func_xuathang"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_ls"
            android:layout_width="96dp"
            android:layout_height="41dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:text="Lịch sử"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/text_xh"
            app:layout_constraintTop_toBottomOf="@+id/func_ls"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="451dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/main_edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ListView

                android:id="@+id/listViewNoticeHome"
                android:layout_width="321dp"
                android:layout_height="330dp"
                android:layout_marginLeft="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/text_nh"
            android:layout_width="99dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Nhập hàng"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/func_nhapHang"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textPos"
            android:layout_width="106dp"
            android:layout_height="31dp"
            android:layout_marginBottom="36dp"
            android:text="Thủ kho"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/func_xuathang"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintStart_toEndOf="@+id/imgAvt"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>