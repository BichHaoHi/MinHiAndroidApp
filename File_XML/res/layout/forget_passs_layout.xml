<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="@drawable/round_corner_blr"
        tools:ignore="MissingConstraints"
        >

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/textFogetPass"
            android:layout_width="340dp"
            android:layout_height="172dp"
            android:layout_gravity="top"
            android:background="@drawable/round_corner_blr"
            android:paddingLeft="0dp"
            android:paddingTop="60dp"
            android:radius="25dp"
            android:text="FORGET PASSWORD"
            android:textColor="#ffffff"
            android:textSize="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:background="@drawable/round4corner_border"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/imgStore"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/store" />

        <!-- EditText cho tên đăng nhập -->
        <EditText
            android:id="@+id/edtEmailAgain"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Email:"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/imgStore"
            />


        <!-- Button đăng nhập -->
        <Button
            android:id="@+id/btnSendPass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Send pass for Email"
            android:layout_below="@id/edtEmailAgain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            app:backgroundTint="@null"

            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>