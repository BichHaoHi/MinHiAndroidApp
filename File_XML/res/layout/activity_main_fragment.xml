<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragmentActivity">

    <FrameLayout
        android:id="@+id/fragment_main"
        android:name="com.example.appmanager.Fragment_Home"
        android:layout_width="408dp"
        android:layout_height="571dp"
        tools:ignore="MissingConstraints"
        tools:layout="@layout/fragment_home_layout"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="-3dp"
        android:background="@color/color_background">

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_function"
        android:layout_width="412dp"
        android:layout_height="161dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp">

        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_home_run"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/btnReport"
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_report_non"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnHome"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/btnNotice"
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:layout_marginStart="84dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_notice_non"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnReport" />

        <ImageView
            android:id="@+id/btnSetting"
            android:layout_width="62dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_setting_non"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.285"
            app:layout_constraintStart_toEndOf="@+id/btnNotice"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="410dp"
            android:layout_height="84dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-2dp"
            android:background="@color/color_background"/>

        <ImageView
            android:id="@+id/btnPlus"
            android:layout_width="87dp"
            android:layout_height="82dp"
            android:src="@drawable/btn_plus"
            app:layout_constraintEnd_toEndOf="@+id/btnPluss"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="3dp" />

        <ImageView
            android:id="@+id/btnPluss"
            android:layout_width="87dp"
            android:layout_height="82dp"
            android:src="@drawable/ic_plus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="2dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>