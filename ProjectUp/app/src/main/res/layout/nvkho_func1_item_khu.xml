<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameKhu"
        android:layout_width="411dp"
        android:layout_height="53dp"
        android:background="@drawable/straight"
        android:text="Khu 1"
        android:textAlignment="center"
        android:textColor="#2b2b2b"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="415dp"
        android:layout_height="157dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameKhu">

        <Button
            android:id="@+id/selectKe1"
            android:layout_width="115dp"
            android:layout_height="71dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round4_boxnotice"
            android:text="Kệ 1"
            android:textAlignment="center"
            app:backgroundTint="#d9d9d9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameKhu"
            tools:ignore="MissingConstraints,NotSibling" />

        <Button
            android:id="@+id/selectKe2"
            android:layout_width="115dp"
            android:layout_height="71dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round4_boxnotice"
            android:text="Kệ 2"
            android:textAlignment="center"
            app:backgroundTint="#00c382"
            app:layout_constraintStart_toEndOf="@+id/selectKe1"
            app:layout_constraintTop_toBottomOf="@+id/nameKhu"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/selectKe3"
            android:layout_width="115dp"
            android:layout_height="71dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/round4_boxnotice"
            android:text="Kệ 3"
            android:textAlignment="center"
            app:backgroundTint="#ad2b2b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.714"
            app:layout_constraintStart_toEndOf="@+id/selectKe2"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/selectKe4"
            android:layout_width="115dp"
            android:layout_height="71dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round4_boxnotice"
            android:text="Kệ 4"
            android:textAlignment="center"
            app:backgroundTint="#00c382"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectKe1"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/selectKe5"
            android:layout_width="115dp"
            android:layout_height="71dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round4_boxnotice"
            android:text="Kệ 5"
            android:textAlignment="center"
            app:backgroundTint="#00c382"
            app:layout_constraintStart_toEndOf="@+id/selectKe4"
            app:layout_constraintTop_toBottomOf="@+id/selectKe2"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/selectKe6"
            android:layout_width="115dp"
            android:layout_height="71dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round4_boxnotice"
            android:text="Kệ 6"
            android:textAlignment="center"
            app:backgroundTint="#d9d9d9"
            app:layout_constraintStart_toEndOf="@+id/selectKe5"
            app:layout_constraintTop_toBottomOf="@+id/selectKe3"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>